<% include ../partials/header.ejs %>

<!-- Content for the Add Page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="CourseCodeTextField">Course Code</label>
                    <input type="text" class="form-control"
                    id="CourseCodeTextField"
                    placeholder="Enter Course Code"
                    name="CourseCode"
                    required>
                </div>

                <div class="form-group">
                    <label for="BuildingTextField">Building</label>
                    <input type="text" class="form-control"
                    id="BuildingTextField"
                    placeholder="Enter Building"
                    name="Building"
                    required>
                </div>

                <div class="form-group">
                    <label for="RoomTextField">Room</label>
                    <input type="text" class="form-control"
                    id="RoomTextField"
                    placeholder="Enter Room"
                    name="Room"
                    required>
                </div>

                <div class="form-group">
                    <label for="DayTextField">Day</label>
                    <input type="text" class="form-control"
                    id="DayTextField"
                    placeholder="Enter Day"
                    name="Day"
                    required>
                </div>

                <div class="form-group">
                    <label for="TimeStartTextField">Time Start</label>
                    <input type="text" class="form-control"
                    id="TimeStartTextField"
                    placeholder="Enter Time Start"
                    name="TimeStart"
                    required>
                </div>

                <div class="form-group">
                    <label for="TimeEndTextField">Time End</label>
                    <input type="text" class="form-control"
                    id="TimeEndTextField"
                    placeholder="Enter Time End"
                    name="TimeEnd"
                    required>
                </div>

                <button type="submit" class="btn btn-primary">
                <i class="fas fa-edit"></i> Submit</button>
                <a href="/room-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>


        </div>
    </div>
</div>





<% include ../partials/footer.ejs %>
